generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
	id          		String      @id @default(cuid())
	packs       		Pack[]
}

model Pack {
	packId          String      @id @default(cuid())
	packName        String
	packImage			 	String?
	game 						Game[]
	cards						Card[]
}

model Card {
	cardId          String      @id @default(cuid())
	cardName        String?
	cardText        String?
	cardType        String?
	cardImage       String?
	packs					 Pack[]
}


